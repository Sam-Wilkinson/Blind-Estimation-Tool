<div class="container">
  <header class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4 border-bottom">
    <a href="/" class="d-flex align-items-center col-md-3 mb-2 mb-md-0 text-dark text-decoration-none">
      <svg class="bi me-2" width="40" height="32" role="img" aria-label="Bootstrap"><use xlink:href="#bootstrap"></use></svg>
    </a>
    <ul class="nav col-12 col-md-auto mb-2 justify-content-center mb-md-0">
      <li><%= link_to t('views.static_pages.home.title'), home_path, class: "nav-link px-2 link-secondary"%></li>
      <li><%= link_to t('views.static_pages.about.title'), about_path, class: "nav-link px-2 link-secondary"%></li>
      <li><%= link_to t('views.static_pages.help.title'), help_path, class: "nav-link px-2 link-secondary"%></li>
    </ul>
    <% if current_user %>
      <div class="col-md-3 text-end">
        <%= link_to t('users.options.edit'), edit_user_registration_path, class: "btn btn-outline-primary me-2", type: "button" %>
        <%= link_to t('users.options.signout'), destroy_user_session_path, method: "delete",  class: "btn btn-outline-primary", type: "button" %>
      </div>
    <% else %>
      <div class="col-md-3 text-end">
        <%= link_to t('users.options.login'), new_user_session_path, class: "btn btn-outline-primary me-2", type: "button" %>
        <%= link_to t('users.options.signup'), new_user_registration_path, class: "btn btn-primary", type: "button" %>
      </div>
    <%end%>
  </header>
</div>
